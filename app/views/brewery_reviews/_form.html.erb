<br><br><br>
<%=form_for @breweryReview do |f|%>
    <%=f.label("Brewery Review Title:") %>
    <%=f.text_field :title %><br>
    <%=f.label("Review Content:") %><br>
    <%=f.text_area :content, :cols => 50, :rows => 10 %><br>
    <%=f.fields_for :breweries do |brew|
      <%=brew.hidden_field :brewery_id %>
    <%end%>
    <%=f.submit "Submit"%>
  <%end%>